#!/bin/bash
set -euo pipefail

this_dir=$(cd $(dirname $0); pwd -P)

export APPVEYOR_BUILD_FOLDER=$(cd $(dirname $this_dir); pwd -P)
export APPVEYOR_REPO_BRANCH=test-branch
export APPVEYOR_REPO_NAME=rcook/ciprobe
export APPVEYOR_REPO_TAG=false
export APPVEYOR_PROJECT_SLUG=ciprobe

pwsh $this_dir/install.ps1
pwsh $this_dir/build.ps1
pwsh $this_dir/test.ps1
