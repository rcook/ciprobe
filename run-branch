#!/bin/bash
set -euo pipefail

this_dir=$(cd $(dirname $0); pwd -P)

invoke() {
  APPVEYOR_BUILD_FOLDER=$this_dir \
  APPVEYOR_REPO_TAG=false \
  APPVEYOR_REPO_BRANCH=rcook-appveyor-notes \
  APPVEYOR_PROJECT_SLUG=ciprobe \
    pwsh $this_dir/scripts/$1.ps1
}

invoke install
invoke build
invoke test
